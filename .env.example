# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp

# Database Name
DB_NAME=smart_parking_db

# Parking Configuration
TOTAL_SLOTS=50

# Parking Charges for Cars (4-wheelers)
BASE_CHARGE_CAR=20
HOURLY_RATE_CAR=10

# Parking Charges for Bikes (2-wheelers)
BASE_CHARGE_BIKE=10
HOURLY_RATE_BIKE=5

# Legacy charges (for backward compatibility)
BASE_CHARGE=20
HOURLY_RATE=10

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# Google Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Qdrant Cloud Configuration
# Get your credentials from: https://cloud.qdrant.io/
QDRANT_URL=https://your-cluster.gcp.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# Email Configuration (Outlook/Office365)
OUTLOOK_EMAIL=your_email@outlook.com
OUTLOOK_PASSWORD=your_email_password
OUTLOOK_HOST=smtp.office365.com
OUTLOOK_PORT=587

# JWT Secret Key (Generate a secure random key)
JWT_SECRET_KEY=your_secret_jwt_key_change_this_in_production

# OTP Configuration
OTP_EXPIRY_MINUTES=5
AUTHORIZED_EMAIL=admin@example.com

